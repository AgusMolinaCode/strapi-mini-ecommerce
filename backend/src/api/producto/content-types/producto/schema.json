{
  "kind": "collectionType",
  "collectionName": "productos",
  "info": {
    "singularName": "producto",
    "pluralName": "productos",
    "displayName": "Producto"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "text"
    },
    "slug": {
      "type": "uid",
      "targetField": "titulo"
    },
    "descripcion": {
      "type": "text"
    },
    "precio": {
      "type": "decimal"
    },
    "precio_anterior": {
      "type": "decimal"
    },
    "en_oferta": {
      "type": "boolean"
    },
    "stock": {
      "type": "integer"
    },
    "imagenes": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "destacado": {
      "type": "boolean"
    },
    "activo": {
      "type": "boolean"
    },
    "categorias": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::categoria.categoria",
      "inversedBy": "productos"
    }
  }
}
