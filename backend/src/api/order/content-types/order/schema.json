{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Orders for physical products with shipping"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "text",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "approved",
        "rejected",
        "failed",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "preferenceId": {
      "type": "string"
    },
    "paymentId": {
      "type": "string"
    },
    "externalReference": {
      "type": "string",
      "unique": true
    },
    "buyerName": {
      "type": "string",
      "required": true
    },
    "buyerEmail": {
      "type": "email",
      "required": true
    },
    "buyerPhone": {
      "type": "string",
      "required": true
    },
    "shippingAddress": {
      "type": "json",
      "required": true
    },
    "items": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "required": true
    },
    "shippingCost": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "paidAt": {
      "type": "datetime"
    },
    "shippedAt": {
      "type": "datetime"
    },
    "deliveredAt": {
      "type": "datetime"
    },
    "notes": {
      "type": "text"
    }
  }
}
